[bandit]
# Keep skipping assert_used (B101) if present in tests; adjust as needed.
skips = B101
# Only exclude virtual environment so we scan src, scripts, tests, and root-level code.
exclude = .venv,.git,.mypy_cache,.ruff_cache,.pytest_cache,.vscode,.github
# Targets: allow root recursion (bandit -r .), but document typical source dirs.
targets = src,scripts,tests
